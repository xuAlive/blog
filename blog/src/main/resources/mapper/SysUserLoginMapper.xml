<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xu.blog.mapper.SysUserLoginMapper">

    <resultMap id="BaseResultMap" type="com.xu.blog.domain.SysUserLogin">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="account" column="account" jdbcType="VARCHAR"/>
            <result property="ip" column="ip" jdbcType="VARCHAR"/>
            <result property="address" column="address" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,account,ip,address,
        create_time
    </sql>

    <!-- 按账号和IP分组查询登录记录 -->
    <select id="selectLoginRecordsGroupByAccountAndIp" resultType="com.xu.blog.param.vo.sys.UserLoginVO">
        SELECT
            account,
            ip,
            MAX(address) as address,
            COUNT(*) as loginCount,
            MAX(create_time) as lastLoginTime
        FROM sys_user_login
        <where>
            <if test="account != null and account != ''">
                AND account = #{account}
            </if>
        </where>
        GROUP BY account, ip
        ORDER BY lastLoginTime DESC
    </select>
</mapper>
